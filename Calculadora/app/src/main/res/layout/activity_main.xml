<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:rotationX="-360"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="48sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="10"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operators_Button"
            android:layout_weight="3"
            android:text="C" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/Operators_Button"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_sete"
            style="@style/Numbers_button"
            android:text="7" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_oito"
            style="@style/Numbers_button"
            android:text="8" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_nove"
            style="@style/Numbers_button"
            android:text="9" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/multiplicacao"
            style="@style/Operators_Button"
            android:text="X" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_quatro"
            style="@style/Numbers_button"
            android:text="4" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_cinco"
            style="@style/Numbers_button"
            android:text="5" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_seis"
            style="@style/Numbers_button"
            android:text="6" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/subtracao"
            style="@style/Operators_Button"
            android:text="-" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_um"
            style="@style/Numbers_button"
            android:text="1" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_dois"
            style="@style/Numbers_button"
            android:text="2" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_tres"
            style="@style/Numbers_button"
            android:text="3" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/soma"
            style="@style/Operators_Button"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ponto"
            style="@style/Numbers_button"
            android:text="." />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/numero_zero"
            style="@style/Numbers_button"
            android:text="0" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/backspace"
            style="@style/Numbers_button"
            android:scaleType="centerInside"
            android:src="@drawable/img" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/igual"
            style="@style/Operators_Button"
            android:text="=" />

    </LinearLayout>


</LinearLayout>